<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.nwodhcout.napper.app.NapFeedbackActivity">

    <TextView
        android:id="@+id/feedbackText"
        android:text="@string/alarm_set_feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/napButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize = "40sp"
        android:fontFamily="sans-serif-light"
        android:textStyle="normal"
        android:textColor="#864C9E"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buttonbg"
        android:text="@string/napping"
        android:onClick="nap"
        />



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <LinearLayout
            android:id="@+id/timeWrapper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            >
            <TextSwitcher
                android:id="@+id/hoursTens"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inAnimation="@anim/push_up_in"
                android:outAnimation="@anim/push_up_out"
                />

            <TextSwitcher
                android:id="@+id/hoursOnes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/hoursTens"
                android:inAnimation="@anim/push_up_in"
                android:outAnimation="@anim/push_up_out"
                />
            <TextView
                android:id="@+id/hourMinSeparator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text = ":"
                />

            <TextSwitcher
                android:id="@+id/minutesTens"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/hourMinSeparator"
                android:inAnimation="@anim/push_up_in"
                android:outAnimation="@anim/push_up_out"
                />
            <TextSwitcher
                android:id="@+id/minutesOnes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/minutesTens"
                android:inAnimation="@anim/push_up_in"
                android:outAnimation="@anim/push_up_out"
                />
            <TextView
                android:id="@+id/minSecSeparator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text = ":"
                />
            <TextSwitcher
                android:id="@+id/secondsTens"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/minSecSeparator"
                android:inAnimation="@anim/push_up_in"
                android:outAnimation="@anim/push_up_out"
                />
            <TextSwitcher
                android:id="@+id/secondsOnes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/secondsTens"
                android:inAnimation="@anim/push_up_in"
                android:outAnimation="@anim/push_up_out"
                />

        </LinearLayout>



    </RelativeLayout>
    <Button
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:layout_alignParentBottom="true"


        android:layout_below = "@id/timeWrapper"
        android:text = "@string/cancel_alarm"
        android:textSize = "30sp"
        android:orientation="vertical"
        android:onClick="cancelAlarm"/>
</RelativeLayout>
