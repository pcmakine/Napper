<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape
            android:shape="oval" >
            <solid android:color="#00f" />
            <stroke
                android:width="1dp"
                android:color="#C2AAD2" />
            <size
                android:height="15dp"
                android:width="15dp" />
        </shape>
    </item>
    <item>
        <shape
            android:shape="ring" >
            <solid android:color="#ffffff" />

            <size
                android:height="15dp"
                android:width="15dp" />
        </shape>
    </item>



</layer-list>